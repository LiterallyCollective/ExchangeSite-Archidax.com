<div id="my_orders_wrapper" class="has-left-dropdown">
  <div class="dropdown-wrapper">
    <div>
      <button class="active">Open Orders</button>
    </div>
  </div>
  <div id="my_orders" class="panel panel-default">
    <div class="table-header-row" role="row">
      <div class="table-header-column" role="columnheader" >
        <span title="Date">Date</span>
      </div>
      <div class="table-header-column" role="columnheader" >
        <span title="Type">Type</span>
      </div>
      <div class="table-header-column justify-content-center" role="columnheader" >
        <span title="Price">Price</span>
      </div>
      <div class="table-header-column justify-content-center" role="columnheader">
        <span title="Amount">Amount</span>
      </div>
      <div class="table-header-column justify-content-center" role="columnheader">
        <span title="Total">Total</span>
      </div>
      <div class="table-header-column cancel-container" role="columnheader">
        <div direction="row" wrap="nowrap">
          <%= link_to t('.clear_all_html'),  "/markets/#{@data.fetch(:current_market).fetch(:id)}/orders/clear", class: 'cancel-all', remote: true, method: :post, data: {confirm: t('.confirm_clear_all')} %>
          <span class="iconfont icon-downsjsmall s15sks45-13 brDjiw">
            <i class="fa fa-chevron-down"></i>
            <ul>
              <li>
                <%= link_to t('.clear_bids_html'), "/markets/#{@data.fetch(:current_market).fetch(:id)}/order_bids/clear", remote: true, method: :post, data: {confirm: t('.confirm_clear_bids')} %>
              </li>
              <li>
                <%= link_to t('.clear_asks_html'), "/markets/#{@data.fetch(:current_market).fetch(:id)}/order_asks/clear", remote: true, method: :post, data: {confirm: t('.confirm_clear_asks')} %>
              </li>
              <li>
                <%= link_to t('.clear_all_html'),  "/markets/#{@data.fetch(:current_market).fetch(:id)}/orders/clear", remote: true, method: :post, data: {confirm: t('.confirm_clear_all')} %>
              </li>
            </ul>
          </span>
        </div>
      </div>
    </div>
    <div class="panel-body panel-body-content">
      <div class="empty-row">
        <%= t('.no_open_orders') %>
      </div>
      <table class="table table-hover">
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
