<h2 class="title font-weight-bold"><span>Add <span class="hidden-xs">mobile</span> phone</span></h2>

<div class="d-flex justify-content-center box-shadow">
  <div class="steps d-flex justify-content-between pb-2 px-5 mb-2">
    <div class="col-4 step-col first">
      <div class="step text-muted completed"></div>
      <small>Email</small>
    </div>
    <div class="col-4 step-col">
      <div class="step text-muted current"></div>
      <small>Phone</small>
    </div>
    <div class="col-4 step-col last">
      <div class="step text-muted"></div>
      <small>Document</small>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center px-5 py-4">
  <%= form_tag("/users/phones") do %>
    <div class="form-group">
      <div class="row">
        <div class="col-3 px-0">
          <%= text_field_tag :country_code, nil, class: 'form-control required', placeholder: '+1' %>
        </div>
        <div class="col-6 px-0">
          <%= text_field_tag :number, nil, class: 'form-control required', placeholder: '000 000 0000' %>
        </div>
        <div class="col-3 px-0">
          <div class="send_code underlined">
          <div class="loader"></div>
            <a href="javascript:void(0)" id="send-code-btn">Send code</a>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= number_field_tag :code, nil, class: 'form-control required', placeholder: 'Enter SMS confirmation code' %>
    </div>

    <div class="submit-container row">
      <%= submit_tag  'CONFIRM', class: 'btn btn-block btn-success',id: 'create-phone', disabled: true %>
      <div id="error"></div>
    </div>
  <% end %>
</div>
