
<p class="empty-field">This field is required.</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group text-left mb-2">
    <label style="font-size: 0.8rem;">Email</label>
    <div class="position-relative">
      <div class="form-input-icon input-mail-icon"></div>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email',
                        class: 'form-control required', placeholder: 'Enter email' %>
    </div>
  </div>

  <div class="form-group text-left mb-2">
    <label style="font-size: 0.8rem;">Password</label>
    <div class="position-relative">
      <div class="form-input-icon input-password-icon"></div>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control required',
                          placeholder: @minimum_password_length ?
                                           "Password (#{@minimum_password_length} characters minimum)" : "Enter password" %>
    </div>
  </div>

  <div class="form-group text-left mb-2">
    <label style="font-size: 0.8rem;">Confirm password</label>
    <div class="position-relative">
      <div class="form-input-icon input-password-icon"></div>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control required',
                           placeholder: 'Enter password' %>
    </div>
  </div>

  <div class="form-group text-left mb-2">
    <label style="font-size: 0.8rem;">Referral ID</label>
    <div class="position-relative">
      <div class="form-input-icon input-refercode-icon"></div>
      <%= f.text_field :referral_code, autocomplete: 'off', class: 'form-control', placeholder: 'Referral ID (Optional)' %>
    </div>
  </div>

  <div class="form-group text-left mt-4 mb-2 position-relative" style="margin-left: 2.8rem;">
    <input id="agreement" type="checkbox">
    <label class="custom-switch" for="agreement">
      I agree to Archidax's <a href="/terms" target="_blank">Terms of Use</a></label>
  </div>

  <div class="submit-container position-relative mt-4">
    <%= f.submit 'Register', class: 'btn', disabled: true %>
    <i class="fa fa-sign-in ml-1"></i>
  </div>
<% end %>
