
<div class="text-center auth-logo-text mb-3">
  <h4 class="mt-0 mb-4 mt-5" style="text-transform: uppercase;">Change Password</h4>
</div><!--end auth-logo-text-->

<form class="form-horizontal auth-form my-4" action="">
  <div class="row mb-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="col-md-12 mb-3">
        <%= f.password_field :current_password, autocomplete: 'off',  class: "form-control frm-new", placeholder: 'Enter Old Password' %>
      </div>

      <div class="col-md-12 mb-3">
        <%= f.password_field :password, autocomplete: 'off',  class: "form-control frm-new", placeholder: 'Enter New Password' %>
      </div>

      <div class="col-md-12 mb-4">
        <%= f.password_field :password_confirmation, autocomplete: 'off',  class: "form-control frm-new", placeholder: 'Repeat New Password' %>
      </div>

      <div class="col-md-12 mb-2 mt-2">
        <%= f.submit "Change", class: "btn btn-primary btn-round waves-effect full-width" %>
      </div>
    <% end %>
  </div>
</form>