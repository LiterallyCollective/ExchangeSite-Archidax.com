<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= domain_title_tag(domain_asset :title) %>
    </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'web', media: 'all' %>
    <%= stylesheet_link_tag    'account_style' %>
    <%= domain_stylesheet_tag(domain_asset :stylesheet) %>
    <%= javascript_include_tag 'web' %>

    <%= domain_favicon_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="devise">
    <%= domain_html_tag(domain_asset :header) %>

    <div class="main-card">
      <div class="card">

        <%= link_to domain_logo_tag(domain_asset :logo), "/",  class: 'logo' %>

        <% unless alert.blank? %>
          <span class="alert alert-danger mb-0">
            <i class="icon icon-cancel-circled"></i> <h3><%= alert %></h3>
          </span>
        <% end %>

        <% unless notice.blank? %>
          <span class="alert alert-success mb-0">
            <i class="icon icon-cancel-circled"></i> <h3><%= notice %></h3>
          </span>
        <% end %>

        <div class="pt-2">
          <%= yield %>
        </div>

        <% if account_signed_in? %>
          <%= render 'layouts/shared/account_footer' %>
        <% else %>
          <%= render 'devise/shared/footer' %>
        <% end %>

      </div>
      <div class="verifyBottom">
        <div class="item">
          <a href="/">Home</a>　
          <a href="#" target="_blank" class="ng-binding">Support</a>
        </div>
        <div class="item">© 2013 - 2018 Gigaex. All rights reserved</div>
      </div>
    </div>

    <%= domain_html_tag(domain_asset :footer) %>
  </body>
</html>
