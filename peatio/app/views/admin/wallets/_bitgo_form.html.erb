<%= fields_for wallet do |f| %>
  <div class="form-group">
    <label for="#bitgo_test_net_enabled">Bitgo Test Net</label>
    <%= f.check_box :bitgo_test_net, { class: 'custom-control-input', id: 'bitgo_test_net_enabled',
        data: { parsley: { multiple: 'groups', mincheck: '2' }} } %><br>
  </div>

  <div class="form-group">
    <label>Bitgo Wallet ID</label>
    <%= f.text_field :bitgo_wallet_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Bitgo Wallet Passphrase</label>
    <%= f.text_field :bitgo_wallet_passphrase, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Bitgo Rest Api Root</label>
    <%= f.text_field :bitgo_rest_api_root, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Bitgo Rest Api Access Token</label>
    <%= f.text_field :bitgo_rest_api_access_token, class: 'form-control' %>
  </div>
<% end %>
