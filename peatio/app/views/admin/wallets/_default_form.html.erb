<%= fields_for wallet do |f| %>
  <div class="form-group">
    <label>URI</label>
    <%= f.text_field :uri, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Secret</label>
    <%= f.password_field :secret, class: 'form-control', value: wallet.secret || '' %>
  </div>
<% end %>

