<ul class="nav nav-pills nav-justified" role="tablist">
  <% tabs.each do |name, args| %>
    <% css_class = name == active ? 'nav-link active' : 'nav-link' %>
    <li class="nav-item waves-effect waves-light">
      <%= link_to t(args[0]), args[1], class: css_class %>
    </li>
<!--    aria-selected="true"-->
  <% end %>
</ul>
