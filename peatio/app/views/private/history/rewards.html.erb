<% content_for :frame do %>
  <div class="container history-pages">
    <%= render 'tabs', active: :reward %>

    <div class="card card-default" id="trades">
      <div class="card-body">
        <div class="col-24">
          <table class="table table-condensed table-striped">
            <thead>
            <tr>
              <th><%= t('.amount') %></th>
              <th><%= t('.currency') %></th>
              <th><%= t('.from') %></th>
              <th><%= t('.created_at') %></th>
            </tr>
            </thead>
            <tbody class="list">
            <%= render partial: 'reward', collection: @rewards %>
            </tbody>
          </table>
          <div class="float-right">
            <%= paginate @rewards %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>