<li class="nav-item dropdown app-path" id="settings">
  <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
    <img src="/languages/<%= I18n.locale %>.png"/>
    <%= I18n.locale == 'en'.to_sym ? 'English' : 'Korean' %>
  </a>
  <div id="languages" class="dropdown-menu">
    <% I18n.available_locales.each do |lang| %>
      <a class="dropdown-item" href="?lang=<%= lang %>">
        <img src="/languages/<%= lang || I18n.locale %>.png"/> <%= (lang || I18n.locale).capitalize %>
      </a>
    <% end %>
  </div>
</li>
